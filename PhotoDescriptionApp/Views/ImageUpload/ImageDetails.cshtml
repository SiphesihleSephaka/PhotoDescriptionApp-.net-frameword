@model PhotoDescriptionApp.Models.ImageDetailsModel

@{
    ViewData["Title"] = "Image Details";
}

<h2>Uploaded Image</h2>

<div class="image-container">
    <!-- Display the image with fixed dimensions -->
    <img src="@Model.ImageUrl" alt="Uploaded Image" class="img-fluid" />
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<a asp-action="Index" class="btn btn-primary">Upload Another Image</a>

<!-- CSS styling directly in the view -->
<style>
    .image-container {
        text-align: center; /* Center the image horizontally */
        margin-top: 20px;
    }

    img {
        width: 400px; /* Fixed width for the image */
        height: auto; /* Keep the aspect ratio */
        max-width: 100%; /* Ensure it does not overflow the container */
        border: 2px solid #ddd;
        padding: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    p {
        margin-top: 20px;
    }
</style>
